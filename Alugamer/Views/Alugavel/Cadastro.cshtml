@model Alugamer.Models.Alugavel

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <link rel="stylesheet" type="text/css" href="~/css/Cadastro.css" />
}
@section Scripts{
    <script src="~/js/cadastroAlugavel.js"></script>

}

<h4>Cadastro de Alugáveis</h4>
<hr />
<div class="row">
    <div class="card col-md-4">
        <div class="card-body">
            <form onsubmit="salvaAlugavel(event)">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display:none">
                    <strong><label asp-for="Id" class="control-label"></label></strong>
                    <input asp-for="Id" class="form-control" required />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <strong><label asp-for="Nome" class="control-label"></label></strong>
                    <input asp-for="Nome" class="form-control" required />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <strong> <label asp-for="Descricao" class="control-label"></label></strong>
                    <input asp-for="Descricao" class="form-control" required />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <strong> <label asp-for="Quantidade" class="control-label"></label></strong>
                    <input asp-for="Quantidade" class="form-control" required />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <strong> <label asp-for="Valor_compra" class="control-label"></label></strong>
                    <input asp-for="Valor_compra" class="form-control" required />
                    <span asp-validation-for="Valor_compra" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <strong><label asp-for="Valor_aluguel" class="control-label"></label></strong>
                    <input asp-for="Valor_aluguel" class="form-control" required />
                    <span asp-validation-for="Valor_aluguel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <strong><label asp-for="IdCategoria" class="control-label"></label></strong>
                    <select class="form-control" id="categoria" required>
                        <option value="">Escolha</option>
                        @foreach (Categoria categoria in ((IEnumerable<Categoria>)ViewBag.ListaCategoria))
                        {
                            @if (categoria.Id == Model.IdCategoria)
                            {
                                <option value="@categoria.Id" selected> @categoria.Nome</option>
                            }
                            else
                            {
                                <option value="@categoria.Id"> @categoria.Nome</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="IdCategoria" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

