@model IEnumerable<Alugamer.Models.Alugavel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.23/b-1.6.5/r-2.2.7/sl-1.3.1/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/dataTables.buttons.min.js"></script>
    <script src="~/js/CRUDAlugavel.js"></script>
}

@section CSS{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.23/b-1.6.5/r-2.2.7/sl-1.3.1/datatables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.6.5/css/buttons.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/css/CRUDAlugavel.css" />
}

<h1>Alugáveis</h1>

<table class="table" id="tbAlugavel">
    <thead>
        <tr>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor_compra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor_aluguel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="display:none">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor_compra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor_aluguel)
                </td>
                <td>
                    @(((IEnumerable<Categoria>)ViewBag.ListaCategoria).Where(o => o.Id == item.IdCategoria).Select(o => o.Nome).FirstOrDefault())
                </td>
                <td style="text-align:center">
                    @Html.ActionLink("Editar", "Cadastro", new {item.Id})
                </td>
            </tr>
        }
    </tbody>
</table>
