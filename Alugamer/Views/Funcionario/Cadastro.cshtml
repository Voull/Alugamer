@model Alugamer.Models.Funcionario

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_LayoutCadastro.cshtml";
}

@section Header{
    <h4>Cadastro de Funcionários</h4>
}

@section Scripts{
    <script type="text/javascript" src="~/js/cadastroFuncionario.js"></script>
}

@section Form{
    <form onsubmit="salvaCliente(event)">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" style="display:none">
            <strong> <label asp-for="Id" class="control-label"></label></strong>
            <input asp-for="Id" class="form-control" required />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <strong> <label asp-for="Nome" class="control-label"></label></strong>
            <input asp-for="Nome" class="form-control" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <strong>   <label asp-for="Email" class="control-label"></label></strong>
            <input asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <strong>  <label asp-for="Telefone" class="control-label"></label></strong>
            <input asp-for="Telefone" class="form-control" required />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <strong>  <label asp-for="Endereco" class="control-label"></label></strong>
            <input asp-for="Endereco" class="form-control" required />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>
        <div class="form-group">
            <strong>   <label asp-for="DataNascimento" class="control-label"></label></strong>
            <input asp-for="DataNascimento" class="form-control" required />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <strong> <label asp-for="Sexo" class="control-label"></label></strong>
            <select asp-for="Sexo" class="form-control" required >
                <option value="">Escolha</option>
                <option value="M">Masculino</option>
                <option value="F">Feminino</option>
            </select>
            <span asp-validation-for="Sexo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <strong>  <label asp-for="Cpf" class="control-label"></label></strong>
            <input asp-for="Cpf" class="form-control" required />
            <span asp-validation-for="Cpf" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>
}

