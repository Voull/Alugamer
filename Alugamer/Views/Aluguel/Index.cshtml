@model IEnumerable<Alugamer.Models.Aluguel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    @*<script src="//cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>*@
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.23/b-1.6.5/r-2.2.7/sl-1.3.1/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="~/js/CRUDAluguel.js"></script>
}

@section CSS{
    @*<link rel="stylesheet" href="//cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" />*@
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.23/b-1.6.5/r-2.2.7/sl-1.3.1/datatables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.6.5/css/buttons.bootstrap4.min.css" />
}

<h1 style="padding-bottom:5%">Aluguel</h1>

<table id="tbAluguel" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                <label>Cliente</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor_total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFinal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="display:none">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @(((IEnumerable<Cliente>)ViewBag.listaClientes).Where(o => o.Id == item.Locatario).Select(o => o.Nome).FirstOrDefault())
                </td>
                <th>
                    @Html.DisplayFor(model => item.Valor_total)
                </th>
                <th>
                    @Html.DisplayFor(model => item.DataInicial)
                </th>
                <th>
                    @Html.DisplayFor(model => item.DataFinal)
                </th>
                <td style="text-align:center">
                    @Html.ActionLink("Editar", "Cadastro", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>