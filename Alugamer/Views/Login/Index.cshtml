
@{
    Layout = null;
    ViewData["Title"] = "Alugamer";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <script src='https://www.google.com/recaptcha/api.js'></script>

    <link rel="stylesheet" href="~/lib/bootstrap4/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login.css" />


</head>
<body class="back">
    <div class="header-title">
        <h2><strong>Login</strong></h2>
    </div>

    <section class="container" style="padding-top:7%;">
        <div class="card" style="display: table; margin: 0 auto;">
            <div class="card-body">
                @*<div class="row" style="width:27%; margin: 0 auto;">*@
                <form id="formLogin">

                    <div class="form-group">
                        <label for="campoUsuario">Usuário:</label>
                        <input type="text" class="form-control" aria-describedby="userHelp" id="campoUsuario" name="usuario" placeholder="Usuário" required>
                    </div>
                    <div class="form-group">
                        <label for="campoUsuario">Senha:</label>
                        <input type="password" class="form-control" aria-describedby="passwordHelp" name="senha" id="campoSenha" placeholder="Senha" required>
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-block" value="Login">
                    </div>

                </form>
                @*</div>*@
            </div>
        </div>
    </section>

    <div class="modal fade" id="modalLogin" tabindex="-1" role="dialog" aria-labelledby="modalAutentica" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitulo">Aguarde...</h5>
                </div>
                <div class="modal-body center" id="modalMensagem">
                    <img class="d-block mx-auto" id="imgCarregando" src="~/resources/loader.gif" width="50" alt="Processando">
                </div>
            </div>

        </div>
    </div>

    <div class="modal fade" id="modalErro" tabindex="-1" role="dialog" aria-labelledby="modalAutentica" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="modalErroTitulo">Erro</h4>
                    <button type="button" class="close" data-dismiss="modal" id="modalClose" aria-label="Close">&times;</button>
                </div>

                <div class="modal-body" id="modalErroMensagem">

                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap4/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap4/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/inputUteis.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>

