@model Alugamer.Models.Categoria

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <link rel="stylesheet" type="text/css" href="~/css/CadastroCategoria.css" />
}
@section Scripts{
    <script src="~/js/CadastroCategoria.js"></script>

}

<h4>Cadastro de Categoria</h4>
<hr />
<div class="row">
    <div class="card col-md-4">
        <div class="card-body">
            <form onsubmit="salvaCategoria(event)">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display:none">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <strong><label asp-for="Nome" class="control-label"></label></strong>
                    <input asp-for="Nome" class="form-control" required />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <strong><label asp-for="Descricao" class="control-label"></label></strong>
                    <input asp-for="Descricao" class="form-control" required />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

